{
  "name": "liushi-cli",
  "version": "1.0.0",
  "description": "It`s a cli, which supports rapid construction of front-end projects",
  "main": "./lib/bin/cli",
  "bin": {
    "liushi-cli": "./lib/bin/cli"
  },
  "scripts": {
    "dev": "tsc && liushi-cli",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*",
    "bin/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarchRory/liushi-cli.git"
  },
  "keywords": [
    "cli",
    "npm",
    "vue",
    "create"
  ],
  "author": "MarchRory",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarchRory/liushi-cli/issues"
  },
  "homepage": "https://github.com/MarchRory/liushi-cli#readme",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.9.2",
    "prettier": "^3.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.0",
    "commander": "^11.1.0",
    "download-git-repo": "^3.0.2",
    "figlet": "^1.7.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.0.0",
    "install": "^0.13.0",
    "ora": "^5.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2"
  }
}
