{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "lib": ["es6", "DOM"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["lib", "cli.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
