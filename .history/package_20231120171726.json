{
  "name": "liushi-cli",
  "version": "1.0.0",
  "description": "It`s a cli, which supports rapid construction of front-end projects",
  "main": "cli.ts",
  "bin": {
    "liushi-cli": "cli.ts"
  },
  "scripts": {
    "dev": "ts-node cli.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarchRory/liushi-cli.git"
  },
  "keywords": [
    "cli"
  ],
  "author": "MarchRory",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarchRory/liushi-cli/issues"
  },
  "homepage": "https://github.com/MarchRory/liushi-cli#readme",
  "devDependencies": {
    "@types/node": "^20.9.2",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  }
}
