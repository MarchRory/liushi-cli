{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "module": "ESNext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "lib": ["es6", "DOM"],
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["lib", "cli.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
